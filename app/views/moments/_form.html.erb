<%= simple_form_for @moment, defaults: {required: false}, html: { class: 'form-horizontal' } do |f| %>
  <%= f.simple_fields_for :message_attributes do |m|%>
  <%= m.input :content %>
  <% end %>

  <%= f.simple_fields_for :address_attributes do |a| %>
  <%= a.input :street %>
  <% end %>
  
  <%= render "/attachables/form"%>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                moments_path, :class => 'btn btn-default' %>
<% end %>
