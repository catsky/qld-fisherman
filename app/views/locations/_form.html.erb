<%= simple_form_for @location, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :address %>
  <%= f.input :latitude %>
  <%= f.input :longitude %>
  <%= f.input :suburb %>
  <%= f.input :park_name %>
  <%= f.input :comments %>
  <%= f.input :popular_species %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                locations_path, :class => 'btn btn-default' %>
<% end %>
