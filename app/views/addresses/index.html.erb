<h1>Listing addresses</h1>

<table>
  <thead>
    <tr>
      <th>Street</th>
      <th>Park</th>
      <th>Postcode</th>
      <th>Suburb</th>
      <th>State</th>
      <th>Country</th>
      <th>Visible</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.street %></td>
        <td><%= address.park %></td>
        <td><%= address.postcode %></td>
        <td><%= address.suburb %></td>
        <td><%= address.state %></td>
        <td><%= address.country %></td>
        <td><%= address.visible %></td>
        <td><%= address.latitude %></td>
        <td><%= address.longitude %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

