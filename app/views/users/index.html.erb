<h1>Listing users</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      
      <tr>
        <td><%=user.email%></td>
        <td><%=link_to 'Add Friend', friendships_path(friend_id: user), method: :post %></td>
        <td class='text-right'><%= link_to 'Show', user %>
        <%= link_to 'Edit', edit_user_path(user) %> <%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

