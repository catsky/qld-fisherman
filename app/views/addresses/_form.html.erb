<%= simple_form_for @address, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :type %>
  <%= f.input :street %>
  <%= f.input :park %>
  <%= f.input :postcode %>
  <%= f.input :suburb %>
  <%= f.input :state %>
  <%= f.input :country %>
  <%= f.input :visible %>
  <%= f.input :latitude %>
  <%= f.input :longitude %>
  <%= f.input :addressable_type %>
  <%= f.input :addressable_id %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                addresses_path, :class => 'btn btn-default' %>
<% end %>
