<h1>Listing species</h1>

<table class="table">
  <thead>
    <tr>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @species.each do |specie| %>
      <tr>
        <td><%= specie.name %></td>
        <td><img src="<%= specie.species_images.first.image_url %>" alt="<%= specie.name %>"</td>
        <td><%= link_to 'Show', specie %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>