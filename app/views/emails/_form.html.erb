<%= simple_form_for @email, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :email_address %>
  <%= f.input :user_id %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                emails_path, :class => 'btn btn-default' %>
<% end %>
